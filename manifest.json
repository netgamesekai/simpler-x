{
  "manifest_version": 3,
  "name": "Simpler X (KR)",
  "version": "1.0",
  "description": "한국어 X 웹을 심플하게",

  "permissions": ["storage", "activeTab"],
  "host_permissions": ["*://*.twitter.com/*", "*://*.x.com/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["snippets.json"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["*://*.x.com/*", "*://*.twitter.com/*"],
      "js": ["content.js"]
    }
  ]
}
